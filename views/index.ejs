    </div>
  </div>
</div>

<%- include ('partials/footer.ejs') %>

<!-- protection des images -->
<script>
  const allImage =  document.querySelectorAll("img");
  allImage.forEach( (image) => {
    image.addEventListener('contextmenu', event => event.preventDefault());
  })
</script>
</body>
</html>
