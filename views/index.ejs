<!DOCTYPE html>
<html>
<head>
  <title>Home</title>
  <%- include ('partials/header.ejs') %>
  <script>
    const chargementImage = (target) => {
      console.log(target.parentElement)
      target.parentElement.style.transition="opacity 2.5s ease"
      target.parentElement.style.opacity ="1"
    }
